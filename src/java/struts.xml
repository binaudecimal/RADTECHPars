<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <constant name="struts.devMode" value="false" />
    <constant name="struts.ui.theme" value="bootstrap" />
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"/> 
    <package name="default" extends="struts-default" namespace="/">
        
        <interceptors>
            <interceptor name="RadtechInterceptor" class="com.radtech.RadtechInterceptor" />
            <interceptor-stack name="radtechStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="RadtechInterceptor"/>
            </interceptor-stack>
        </interceptors>
        
        <default-interceptor-ref name="radtechStack"/>
        
        <global-exception-mappings>
            <exception-mapping exception="java.lang.NullPointerException"
                               result="error" />
        </global-exception-mappings>
        
        <action name="login" class="com.radtech.UserAction" method="login">
            <result>welcome.jsp</result>
            <result name="input">index.jsp</result>
            <result name="temp">accounts.jsp</result>

        </action>
        
        <action name="signup" class="com.radtech.UserAction" method="signup">
            <result>welcome.jsp</result>
            <result name="input">index.jsp</result>
        </action>
        
        <action name="logout" class="com.radtech.UserAction" method="logout">
            <result>index.jsp</result>
        </action>

        <action name="addRecord" class="com.radtech.InformationAction" method="add">
            <result>welcome.jsp</result>
            <result name="input">welcome.jsp</result>
        </action>
        
        <action name="getRecord" class="com.radtech.InformationAction" method="get">
            <result>userProfile.jsp</result>
        </action>
        
        <action name="updateRecord" class="com.radtech.InformationAction" method="updateRecord">
            <result>userProfile.jsp</result>
        </action>
        
        <action name="searchDatabase" class="com.radtech.SearchEngine" method="searchDatabase">
            <result>search.jsp</result>
            <result name="input">search.jsp</result>
        </action>
        
        <action name="addDiagnosis" class="com.radtech.DiagnosisAction" method="addDiagnosis">
            <result>diagnosis.jsp</result>
            <result name="input">welcome.jsp</result>
        </action>
        
        <action name="toArchive" class="com.radtech.InformationAction" method="toArchive">
            <result>welcome.jsp</result>
        </action>
        <action name="changePassword" class="com.radtech.UserAction" method="changePassword">
            <result>welcome.jsp</result>
            <result name="input"> accounts.jsp</result>
        </action>
        <action name="addAppointment" class="com.radtech.AppointmentAction" method="addAppointment">
            <result>userProfile.jsp</result>
            <result name="input">userProfile.jsp</result>
        </action>
        <action name="accomplishAppointment" class="com.radtech.AppointmentAction" method="accomplishAppointment">
            <result>schedule.jsp</result>
            <result name="input">schedule.jsp</result>
        </action>
        <action name="addDiagnosis" class="com.radtech.DiagnosisAction" method="addDiagnosis">
            <result>userProfile.jsp</result>
            <result name="input">userProfile.jsp</result>
        </action>
        <action name="statistics" class="com.radtech.AppointmentAction" method="statistics">
            <result>statistics.jsp</result>
        </action>
        <action name="forgotPassword" class="com.radtech.UserAction" method="forgotPassword">
            <result>forgotPass.jsp</result>
            <result name="input">index.jsp</result>
        </action>
        <action name="addQuestion" class="com.radtech.SecurityQuestionAction" method="addQuestion">
            <result>accounts.jsp</result>
            <result name="input">accounts.jsp</result>
        </action>
        <action name="fetchuser" class="com.radtech.UserAction" method="fetchuser">
            <result>accounts.jsp</result>
            <result name="input">index.jsp</result>
        </action>
        <action name="resetPass" class="com.radtech.SecurityQuestionAction" method="resetPassword">
            <result>index.jsp</result>
            <result name="input">forgotPass.jsp</result>
        </action>
        <action name="deleteArchive" class="com.radtech.ArchiveAction" method="deleteArchive">
            <result>archives.jsp</result>
            <result name="input">welcome.jsp</result>
        </action>
        <action name="cancelAppointment" class="com.radtech.AppointmentAction" method="cancelAppointment">
            <result>schedule.jsp</result>
            <result name="input">welcome.jsp</result>
        </action>
        
        
        
    </package>
</struts>
