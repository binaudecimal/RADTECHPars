<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="bootstrap" />
    <package name="default" extends="struts-default">
        
        <action name="login" class="com.radtech.Credentials">
            <result>home.jsp</result>
            <result name="input">index.jsp</result>
        </action>
        
         <action name="signup" class="com.radtech.Credentials">
            <result>home.jsp</result>
            <result name="input">index.jsp</result>
        </action>
        
       <!-- <action name="login" class="com.radtech.Credentials" method="display">
            <result name="none">add.jsp</result>
        </action> -->
        
        <action name="info" class="com.radtech.Information" >
            <result name="input">add.jsp</result>
        </action>
        
        <action name="resultInfo" class="com.radtech.Information" >
            <result name="success">home.jsp</result>
        </action>
        
        <action name="searchDatabase" class="com.radtech.SearchEngine" method="searchDatabase">
            <result>search.jsp</result>
            <result name="input"> search.jsp</result>
        </action>
        
        
    </package>
</struts>
